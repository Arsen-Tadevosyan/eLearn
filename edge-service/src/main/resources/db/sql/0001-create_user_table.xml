<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">


    <changeSet id="0001-create_user_table" author="arsenTadevosyan">
        <createTable tableName="user">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="surname" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="rating" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_role" type="enum('TEACHER', 'STUDENT', 'ADMIN')">
                <constraints nullable="false"/>
            </column>
            <column name="token" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="pic_name" type="varchar(255)">
                <constraints nullable="true"/>
            </column>
            <column name="gender" type="enum('MALE', 'FEMALE')">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>



</databaseChangeLog>